<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Example 1" Height="214" Width="324.667" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="First name" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.201,2.079" Margin="38,28,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="108,31,0,0" TextWrapping="Wrap" Text = "{Binding FirstName}"  VerticalAlignment="Top" Width="160"/>
        <Label Content="Last name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="39,67,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="108,67,0,0" TextWrapping="Wrap" Text = "{Binding LastName}"  VerticalAlignment="Top" Width="160"/>
        <Button Content="Show child window" HorizontalAlignment="Left" Margin="44,115,0,0" VerticalAlignment="Top" Width="223" Click="ShowChildWindow_Click"/>

    </Grid>
</Window>
